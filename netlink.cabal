Library
  Exposed-modules:   System.Linux.Netlink
                     System.Linux.Netlink.C
                     System.Linux.Netlink.Protocol
  Build-depends:     base >=4 && <5,
                     bytestring >=0.9 && <1.0,
                     cereal >=0.3 && <0.4,
                     haskell98 >=1,
                     unix >=2.4 && <2.5
